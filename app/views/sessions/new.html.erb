<div class="container" id="login-form">
  <h1>Login</h1>
  <%= form_tag "/login", method: "post" do %>
    <h3>Username:</h3><br>
    <%= text_field_tag :username, nil, required: true %><br>
    <h3>Password:</h3>
    <%= password_field_tag :password, nil, required: true %><br>
    <%= submit_tag "Login" %>
  <% end %>
</div>
