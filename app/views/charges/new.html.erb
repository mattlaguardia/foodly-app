<section id="supreme-bg-image">
<div class="parallax-container">
  <div class="parallax" ></div>
</div>
<div class="container row" id="login-form">
  <div class="col s8" id="login-form-bg">
  <h4 class="foodlySupreme">Get Foodly Supreme</h4>
  Want free meals and special offers from your liked restaurants? Sign up for Foodly Supreme.
  <br>
  <br>
  <%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
  </article>
  <% end %>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Sign up for month's subscription"
          data-amount="9900"
          data-locale="auto"></script>

</div>
</section>





